# Railway Environment Variables
# Copy this to .env for local development, or set in Railway Dashboard for deployment

# =============================================================================
# Required Variables
# =============================================================================

# PostgreSQL connection string (auto-provided by Railway PostgreSQL service)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/pokemon_videos

# Fernet encryption key for credential storage
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=your-44-character-base64-encoded-fernet-key-here

# =============================================================================
# Optional Variables
# =============================================================================

# Discord webhook for alerts (CRITICAL/ERROR/WARNING)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Enable SQL query logging (development only, set to "false" in production)
DATABASE_ECHO=false

# =============================================================================
# Notion Integration (Optional - for Epic 2 video queuing)
# =============================================================================

# Notion API token from Internal Integration
# Get from: https://www.notion.so/my-integrations
# After creating integration, share your database with it
NOTION_API_TOKEN=secret_your_notion_integration_token_here

# Comma-separated list of Notion database IDs to sync
# Format: database_id_1,database_id_2,database_id_3
# Get database ID from URL: notion.so/workspace/{database_id}?v=view_id
# Example: NOTION_DATABASE_IDS=6b870ef4134346168f14367291bc89e6,abc123def456
NOTION_DATABASE_IDS=

# Sync polling interval in seconds (default: 60, min: 10, max: 600)
# How often to poll Notion for status changes
NOTION_SYNC_INTERVAL_SECONDS=60

# =============================================================================
# Script-specific Variables (see scripts/.env.example for full list)
# =============================================================================

# Gemini API key (for generate_asset.py)
# GEMINI_API_KEY=your_gemini_key

# ElevenLabs API key (for generate_audio.py, generate_sound_effects.py)
# ELEVENLABS_API_KEY=your_elevenlabs_key
# ELEVENLABS_VOICE_ID=your_default_voice_id

# KIE.ai API key (for generate_video.py)
# KIE_API_KEY=your_kie_key
